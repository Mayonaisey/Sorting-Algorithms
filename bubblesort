//BUBBLESORT CODE
void BubbleSort(int arr[], int size) {
    for (int i = 0; i < size - 1; i++) {        //this loop is for no. of passes ex: arr[5,3,2,8,1]------>needs5-1=4 passes only
        for (int j = 0; j < size - 1 - i; j++) {     //here -i is because the first loop the biggest element is stored at the end of the array so it doesn't have to be compared again
            if (arr[j] > arr[j + 1])
                swap(arr[j], arr[j + 1]);
        }
    }
}

